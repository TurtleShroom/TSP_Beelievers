<?xml version="1.0" encoding="utf-8"?>

<!-- SOYLENT GREEN IS PAWNS!! -->
<Patch>
	<!-- Aelanna's Model No-Match Detector and Insertion Code -->
	<!-- Special thanks to Aelanna for straight-up saving me scores of headaches! -->
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef[defName="Make_SoylentGreen"]/recipeUsers</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/RecipeDef[defName="Make_SoylentGreen"]</xpath>
			<success>Always</success>
			<value>
				<recipeUsers></recipeUsers>
			</value>
		</nomatch>
	</Operation>
	
	<!-- Add comps field to Settlement WorldObjectDef if it doesn't exist -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef[defName="Make_SoylentGreenBulk"]/recipeUsers</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/RecipeDef[defName="Make_SoylentGreenBulk"]</xpath>
			<success>Always</success>
			<value>
				<recipeUsers></recipeUsers>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="MealSoylentGreen"]</xpath>
		<!-- If it does, LET'S FASTING GOOOOOOOOOO!!! -->
		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ResearchProjectDef[defName="SoylentGreenResearch"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ResearchProjectDef/prerequisites/li[text()="SoylentGreenResearch"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef/researchPrerequisites/li[text()="SoylentGreenResearch"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef/recipeMaker/researchPrerequisites/li[text()="SoylentGreenResearch"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/RecipeDef/researchPrerequisites/li[text()="SoylentGreenResearch"]</xpath>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/RecipeDef[researchPrerequisite="SoylentGreenResearch"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef/recipeMaker[researchPrerequisite="SoylentGreenResearch"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef[researchPrerequisite="SoylentGreenResearch"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ResearchProjectDef[defName="SoylentGreen_Research"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ResearchProjectDef/prerequisites/li[text()="SoylentGreen_Research"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef/researchPrerequisites/li[text()="SoylentGreen_Research"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/ThingDef/recipeMaker/researchPrerequisites/li[text()="SoylentGreen_Research"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<success>Always</success>
					<xpath>Defs/RecipeDef/researchPrerequisites/li[text()="SoylentGreen_Research"]</xpath>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/RecipeDef[researchPrerequisite="SoylentGreen_Research"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef/recipeMaker[researchPrerequisite="SoylentGreen_Research"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef[researchPrerequisite="SoylentGreen_Research"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisites>
							<li>NutrientPaste</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>Defs/ThingDef[defName="MealSoylentGreen"]/tradeability</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="MealSoylentGreen"]/tradeability</xpath>
			<value>
				<tradeability>All</tradeability>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
	
